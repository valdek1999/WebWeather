@{
    ViewData["Title"] = "Страница с загрузкой эксель файлов";
}


<div class="text-center">
    <h1 class="display-4">Добро пожаловать</h1>
    <div>
        <button id="upload-btn" class="drag-and-drop">
        <h3 class="drag-and-drop-title">
            Перетащите файл для загрузки
        </h3>
        </button>
    </div>    
    
    

    <form name="addfiles" asp-action="AddFile" asp-controller="Home" method="post" enctype="multipart/form-data">
    <input type="file" name="uploads" id="upload-file" hidden="hidden" accept=".xlsx" multiple/>
    </form>
    <input type="submit" value="Загрузить excel файлы" onclick="sendContract()" class="btn btn-send" />



    <div class="modal" data-modal="1">
    <!--   Svg иконка для закрытия окна  -->
    <svg class="modal__cross js-modal-close" xmlns="http://www.w3.org/2000/svg"               viewBox="0 0 24 24"><path d="M23.954 21.03l-9.184-9.095 9.092-9.174-2.832-2.807-9.09 9.179-9.176-9.088-2.81 2.81 9.186 9.105-9.095 9.184 2.81 2.81 9.112-9.192 9.18 9.1z"/></svg>
    <p class="modal__title">Загрузка эксель файлов началась</p>
    </div>
</div>

<script src="/js/dragAndDrop.js"></script>
